{
  "name": "coloringbook",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "debug:deploy": "echo '=> files and dirs:' && find . \\( -path ./node_modules -o -path ./dist \\) -prune -o -type d -o -type f -print",
    "build": "npm run build:css && tsc -b && vite build",
    "build:prod": "npm run build:css && tsc -p tsconfig.json && vite build --mode production",
    "build:css": "npm run build:css-light && npm run build:css-dark",
    "build:css-light": "tailwindcss -i ./src/common/styles/main.light.css -o ./public/main.light.css --mode=production",
    "build:css-dark": "tailwindcss -i ./src/common/styles/main.dark.css -o ./public/main.dark.css --mode=production",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "release:major": "npm version major",
    "release:minor": "npm version minor",
    "release:patch": "npm version patch",
    "serve": "serve dist --config ./../serve.json -p 49665",
    "serve:prod": "serve dist --config ./../serve.json"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-hover-card": "^1.1.4",
    "@radix-ui/themes": "^3.1.6",
    "@reduxjs/toolkit": "^2.5.1",
    "axios": "^1.7.9",
    "fabric": "^6.5.4",
    "jspdf": "^2.5.2",
    "lodash": "^4.17.21",
    "motion": "^11.14.4",
    "react": "^19.0.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "react-redux": "^9.2.0",
    "react-router": "^7.0.2",
    "react-router-dom": "^7.0.2",
    "redux": "^5.0.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.2",
    "@eslint/js": "^9.15.0",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-onboarding": "^8.4.7",
    "@storybook/blocks": "^8.4.7",
    "@storybook/manager-api": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/react-vite": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@storybook/theming": "^8.4.7",
    "@types/fabric": "^5.3.9",
    "@types/lodash": "^4.17.14",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "eslint-plugin-storybook": "^0.11.1",
    "globals": "^15.12.0",
    "postcss": "^8.4.49",
    "serve": "^14.2.4",
    "storybook": "^8.4.7",
    "storybook-dark-mode": "^4.0.2",
    "tailwind-scrollbar": "^3.1.0",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.15.0",
    "vite": "^6.0.1",
    "vite-plugin-svgr": "^4.3.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
